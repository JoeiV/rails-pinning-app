<% if !@errors.nil? %>
  <div class="error">
    <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
    <ul>
      <% @errors.full_messages.each do |msg| %>
        <li><%= msg.text %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<form class="form-horizontal">
    <%= form_for @pin do |f| %>
   <div class="form-group">
    <label for="pin_title" class="col-sm-2 control-label">Title</label>
       <div class="col-sm-10">
        <%= f.text_field :title %>
       </div>
  </div>
    
  <div class="form-group">
    <label for="pin_category_id" class="col-sm-2 control-label">Category</label>
     <div class="col-sm-10">
         <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>
  </div> 
  

  <div class="form-group">
  <label for="pin_body" class="col-sm-2 control-label">Summary Description</label>
      <div class="col-sm-10">
        <%= f.text_area :text %>
      </div>
    </div>

  <div class="form-group">
  <label for="pin_url" class="col-sm-2 control-label">URL</label>
    <div class="col-sm-10">
      <%= f.text_field :url %>
        </div>
    </div>

  <div class="form-group">    
  <label for="pin_slug" class="col-sm-2 control-label">Slug for URL</label>
    <div class="col-sm-10">
      <%= f.text_field :slug %>
        </div>
    </div>

  <div class="col-sm-offset-2 col-sm-10">
      
  <%= f.submit %>
    </div>
<% end %>
</form>