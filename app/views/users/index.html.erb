<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="users"><%= user.first_name %></td>
        <td class="users"><%= user.last_name %></td>
        <td class="users"><%= user.email %></td>
        <td class="users"><%= user.password %></td>
        <td class="button"><%= link_to 'Show', user %></td>
        <td class="button"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="button"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="new-link"><i class="fa fa-user-plus"></i>
    <%= link_to 'New User', new_user_path %>
</div>
